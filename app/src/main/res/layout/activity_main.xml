<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="@string/topsellers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/TopSellers"
        android:layout_width="310dp"
        android:layout_height="190dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvType">
        <LinearLayout
            android:id="@+id/TopLine"
            android:layout_width="154dp"
            android:layout_height="171dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:background="@drawable/prod_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvType">

            <ImageButton
                android:id="@+id/ibtnFFirst"
                android:layout_width="110dp"
                android:layout_height="112dp"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:src="@drawable/prod1"/>
            <TextView
                android:id="@+id/FFtext1"
                android:layout_width="110dp"
                android:layout_height="9dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/hyper_x_cloud_stinger"
                android:textColor="@color/purple"
                android:textSize="7dp"
                app:layout_constraintTop_toTopOf="@id/ibtnFFirst"/>

            <TextView
                android:id="@+id/FFtext2"
                android:layout_width="95dp"
                android:layout_height="9dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/headphones_and_headsets"
                android:textColor="@color/black"
                android:textSize="6dp"
                app:layout_constraintTop_toTopOf="@id/FFtext1" />
            <TextView
                android:id="@+id/FFtext3"
                android:layout_width="95dp"
                android:layout_height="9dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/_24795tg"
                android:textColor="@color/black"
                android:textSize="7sp"
                app:layout_constraintTop_toTopOf="@id/FFtext2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TopLine2"
            android:layout_width="154dp"
            android:layout_height="171dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:background="@drawable/prod_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/TopLine"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ibtnFFirst2"
                android:layout_width="110dp"
                android:layout_height="112dp"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:src="@drawable/prod1"/>
            <TextView
                android:id="@+id/FFtext12"
                android:layout_width="110dp"
                android:layout_height="9dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/hyper_x_cloud_stinger"
                android:textColor="@color/purple"
                android:textSize="7dp"
                app:layout_constraintTop_toTopOf="@id/ibtnFFirst2"/>

            <TextView
                android:id="@+id/FFtext22"
                android:layout_width="95dp"
                android:layout_height="9dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/headphones_and_headsets"
                android:textColor="@color/black"
                android:textSize="6dp"
                app:layout_constraintTop_toTopOf="@id/FFtext12" />
            <TextView
                android:id="@+id/FFtext32"
                android:layout_width="95dp"
                android:layout_height="9dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/_24795tg"
                android:textColor="@color/black"
                android:textSize="7sp"
                app:layout_constraintTop_toTopOf="@id/FFtext22" />
        </LinearLayout>
    </LinearLayout>

   <LinearLayout
       android:id="@+id/TopSecond"
       android:layout_width="310dp"
       android:layout_height="30dp"
       android:layout_marginTop="220dp"
       android:orientation="horizontal"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@id/TopSellers">

       <TextView
           android:id="@+id/tvCategoties"
           android:layout_width="wrap_content"
           android:layout_height="20dp"
           android:fontFamily="@font/montserrat_semibold"
           android:textColor="@color/white"
           android:textSize="15sp"
           android:textStyle="bold"
           android:text="@string/categories1"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.1"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"/>
       <TextView
           android:id="@+id/tvViewAll"
           android:layout_width="wrap_content"
           android:layout_height="20dp"
           android:layout_marginLeft="145dp"
           android:fontFamily="@font/montserrat_semibold"
           android:textColor="@color/white"
           android:textSize="15sp"
           android:textStyle="bold"
           android:text="@string/view_all"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.3"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"/>
   </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>