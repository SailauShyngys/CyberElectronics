<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bluegray"
        tools:context=".presentation.mvvm.PaymentMethodsFragment">

        <LinearLayout
            android:id="@+id/feedbackHead"
            android:layout_width="380dp"
            android:layout_height="55dp"
            android:layout_marginTop="55dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/PaymentBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/backarrow"
                android:contentDescription="@string/back_button"
                app:layout_constraintTop_toTopOf="@id/feedbackHead" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/payment_methods"
                android:textAllCaps="true"
                android:textColor="@color/purple"
                android:textSize="25sp"
                app:layout_constraintTop_toTopOf="@id/feedbackHead" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Card"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/feedbackHead">

            <LinearLayout
                android:id="@+id/radioBtn"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/card"
                    android:textColor="@color/purple"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/CardModel"
                android:layout_width="380dp"
                android:layout_height="310dp"
                android:background="@drawable/card_arround"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/Card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/card_number"
                    android:textColor="@color/purple"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/CardModel" />

                <EditText
                    android:layout_width="337dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_arround"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="@string/_1234_1234"
                    android:letterSpacing="0.05"
                    android:paddingStart="15dp"
                    android:textColor="@color/purple"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/CardModel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/name"
                    android:textColor="@color/purple"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/CardModel" />

                <EditText
                    android:layout_width="337dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_text_arround"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="@string/nikitin_nikita"
                    android:letterSpacing="0.05"
                    android:paddingStart="15dp"
                    android:textAllCaps="true"
                    android:textColor="@color/purple"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/CardModel" />

                <LinearLayout
                    android:id="@+id/CardText"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/card_expiry_date"
                        android:textColor="@color/purple"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="@id/CardText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="140dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/cv_code"
                        android:textColor="@color/purple"
                        android:textSize="16sp"

                        app:layout_constraintTop_toTopOf="@id/CardText" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/DateCode"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="@id/CardText">

                    <LinearLayout
                        android:id="@+id/CardDate"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="55dp"
                            android:layout_height="48dp"
                            android:background="@color/grey"
                            android:hint="."
                            android:inputType="textMultiLine" />

                        <EditText
                            android:layout_width="55dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="5dp"
                            android:background="@color/grey"
                            android:hint="."
                            android:inputType="textMultiLine" />
                    </LinearLayout>

                    <EditText
                        android:layout_width="55dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="165dp"
                        android:background="@color/grey"
                        android:hint="."
                        android:inputType="textMultiLine" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/CashBtn"
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/radioBtn">

                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/cash"
                    android:textColor="@color/purple"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PayCity"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Card">

            <LinearLayout
                android:id="@+id/City"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:background="@drawable/paycity_arround"
                android:orientation="vertical"
                android:padding="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/PayCity">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/almaty_c_68_abay_av"
                    android:textColor="@color/purple"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/address"
                    android:textColor="@color/purple"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ChooseCity"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/paycity_arround"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/City">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/add_address"
                    android:textColor="@color/purple"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Cards"
                android:layout_width="420dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ChooseCity">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="55dp"
                    android:background="@drawable/visacard" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/halykcard" />
            </LinearLayout>

            <Button
                android:id="@+id/PayBtn"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:backgroundTint="@color/green"
                android:fontFamily="@font/montserrat_medium"
                android:letterSpacing="0.1"
                android:text="Continue"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ChooseCity" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>