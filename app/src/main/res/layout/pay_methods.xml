<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluegray"
    tools:context=".presentation.mvvm.PaymentMethodsFragment">

    <LinearLayout
        android:id="@+id/feedbackHead"
        android:layout_width="420dp"
        android:layout_height="55dp"
        android:layout_marginTop="55dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backarrow"
            android:contentDescription="@string/back_button"
            app:layout_constraintTop_toTopOf="@id/feedbackHead" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Payment Methods"
            android:textAllCaps="true"
            android:textColor="@color/purple"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="@id/feedbackHead" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Card"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/feedbackHead">

        <LinearLayout
            android:id="@+id/radioBtn"
            android:layout_width="420dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Card"
                android:textColor="@color/purple"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CardModel"
            android:layout_width="420dp"
            android:layout_height="270dp"
            android:background="@drawable/card_arround"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/Card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Card number"
                android:textColor="@color/purple"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/CardModel" />

            <EditText
                android:layout_width="377dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_arround"
                android:fontFamily="@font/montserrat_medium"
                android:hint="1234   ****   ****   1234"
                android:letterSpacing="0.05"
                android:paddingStart="15dp"
                android:textColor="@color/purple"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/CardModel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Name"
                android:textColor="@color/purple"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/CardModel" />

            <EditText
                android:layout_width="377dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_arround"
                android:fontFamily="@font/montserrat_medium"
                android:hint="NIKITIN NIKITA"
                android:letterSpacing="0.05"
                android:paddingStart="15dp"
                android:textAllCaps="true"
                android:textColor="@color/purple"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@id/CardModel" />

            <LinearLayout
                android:id="@+id/CardText"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Card Expiry Date"
                    android:textColor="@color/purple"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="@id/CardText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="CV code"
                    android:textColor="@color/purple"
                    android:textSize="16sp"

                    app:layout_constraintTop_toTopOf="@id/CardText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/DateCode"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@id/CardText">

                <LinearLayout
                    android:id="@+id/CardDate"
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:background="@color/grey" />

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="5dp"
                        android:background="@color/grey" />
                </LinearLayout>

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="210dp"
                    android:background="@color/grey" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CashBtn"
            android:layout_width="420dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/radioBtn">

            <RadioButton
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Cash"
                android:textColor="@color/purple"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PayCity"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Card">

        <LinearLayout
            android:id="@+id/City"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:background="@drawable/paycity_arround"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/PayCity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Almaty c. 68 Abay av."
                android:textColor="@color/purple"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="address"
                android:textColor="@color/purple"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ChooseCity"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/paycity_arround"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/City">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="+ Add Address"
                android:textColor="@color/purple"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Cards"
            android:layout_width="420dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ChooseCity">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:background="@drawable/VisaCard" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/HalykCard" />
        </LinearLayout>

        <Button
            android:id="@+id/PayBtn"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserrat_medium"
            android:letterSpacing="0.1"
            android:text="Continue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ChooseCity" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>