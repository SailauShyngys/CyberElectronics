<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bluegray"
        tools:context=".presentation.mvvm.CategoryFragment">

        <LinearLayout
            android:id="@+id/categ"
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="54dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/arrowBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/binBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-10dp"
                    android:background="@null"
                    android:contentDescription="@string/back_button"
                    android:src="@drawable/backarrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/Htext"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="60dp"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:letterSpacing="0.05"
                android:text="@string/power_units1"
                android:textColor="@color/purple"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/TopSellers1"
            android:layout_width="390dp"
            android:layout_height="210dp"
            android:layout_marginTop="75dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/categ">

            <LinearLayout
                android:id="@+id/TopLine"
                android:layout_width="195dp"
                android:layout_height="205dp"
                android:background="@drawable/prod_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvType">

                <ImageButton
                    android:id="@+id/ibtnFFirst"
                    android:layout_width="125dp"
                    android:layout_height="129dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@string/image_button"
                    android:src="@drawable/prod1" />

                <TextView
                    android:id="@+id/FFtext1"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/hyper_x_cloud_stinger"
                    android:textColor="@color/purple"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/ibtnFFirst" />

                <TextView
                    android:id="@+id/FFtext2"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/headphones_and_headsets"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext1" />

                <TextView
                    android:id="@+id/FFtext3"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/_24795tg"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/TopLine2"
                android:layout_width="195dp"
                android:layout_height="205dp"
                android:background="@drawable/prod_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/TopLine"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/ibtnFFirst2"
                    android:layout_width="125dp"
                    android:layout_height="129dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@string/image_button"
                    android:src="@drawable/prod1" />

                <TextView
                    android:id="@+id/FFtext12"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/hyper_x_cloud_stinger"
                    android:textColor="@color/purple"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/ibtnFFirst" />

                <TextView
                    android:id="@+id/FFtext22"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/headphones_and_headsets"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext12" />

                <TextView
                    android:id="@+id/FFtext32"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/_24795tg"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext22" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_divider_first"
            android:layout_width="0dp"
            android:layout_height="5dp"
            app:layout_constraintEnd_toEndOf="@id/TopSellers1"
            app:layout_constraintStart_toStartOf="@id/TopSellers1"
            app:layout_constraintTop_toBottomOf="@id/TopSellers1" />

        <LinearLayout
            android:id="@+id/TopSellers2"
            android:layout_width="390dp"
            android:layout_height="210dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_divider_first">

            <LinearLayout
                android:id="@+id/TopLine3"
                android:layout_width="195dp"
                android:layout_height="205dp"
                android:background="@drawable/prod_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvType">

                <ImageButton
                    android:id="@+id/ibtnFFirst3"
                    android:layout_width="125dp"
                    android:layout_height="129dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@string/image_button"
                    android:src="@drawable/prod1" />

                <TextView
                    android:id="@+id/FFtext1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/hyper_x_cloud_stinger"
                    android:textColor="@color/purple"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/ibtnFFirst" />

                <TextView
                    android:id="@+id/FFtext2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/headphones_and_headsets"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext1" />

                <TextView
                    android:id="@+id/FFtext3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/_24795tg"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/TopLine4"
                android:layout_width="195dp"
                android:layout_height="205dp"
                android:background="@drawable/prod_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/TopLine"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/ibtnFFirst4"
                    android:layout_width="125dp"
                    android:layout_height="129dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@string/image_button"
                    android:src="@drawable/prod1" />

                <TextView
                    android:id="@+id/FFtext12_4"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/hyper_x_cloud_stinger"
                    android:textColor="@color/purple"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/ibtnFFirst" />

                <TextView
                    android:id="@+id/FFtext22_4"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/headphones_and_headsets"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext12" />

                <TextView
                    android:id="@+id/FFtext32_4"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/_24795tg"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext22" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_divider_second"
            android:layout_width="0dp"
            android:layout_height="5dp"
            app:layout_constraintEnd_toEndOf="@id/TopSellers2"
            app:layout_constraintStart_toStartOf="@id/TopSellers2"
            app:layout_constraintTop_toBottomOf="@id/TopSellers2" />

        <LinearLayout
            android:id="@+id/TopSellers3"
            android:layout_width="390dp"
            android:layout_height="210dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_divider_second">

            <LinearLayout
                android:id="@+id/TopLine5"
                android:layout_width="195dp"
                android:layout_height="205dp"
                android:background="@drawable/prod_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvType">

                <ImageButton
                    android:id="@+id/ibtnFFirst5"
                    android:layout_width="125dp"
                    android:layout_height="129dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@string/image_button"
                    android:src="@drawable/prod1" />

                <TextView
                    android:id="@+id/FFtext1_5"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/hyper_x_cloud_stinger"
                    android:textColor="@color/purple"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/ibtnFFirst" />

                <TextView
                    android:id="@+id/FFtext2_5"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/headphones_and_headsets"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext1" />

                <TextView
                    android:id="@+id/FFtext3_5"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/_24795tg"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/TopLine6"
                android:layout_width="195dp"
                android:layout_height="205dp"
                android:background="@drawable/prod_background"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/TopLine"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/ibtnFFirst6"
                    android:layout_width="125dp"
                    android:layout_height="129dp"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="9dp"
                    android:contentDescription="@string/image_button"
                    android:src="@drawable/prod1" />

                <TextView
                    android:id="@+id/FFtext12_6"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/hyper_x_cloud_stinger"
                    android:textColor="@color/purple"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/ibtnFFirst" />

                <TextView
                    android:id="@+id/FFtext22_6"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/headphones_and_headsets"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext12" />

                <TextView
                    android:id="@+id/FFtext32_6"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/_24795tg"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintTop_toTopOf="@id/FFtext22" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="270dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/TopSellers3">

            <ImageButton
                android:id="@+id/CButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/cart1"
                android:contentDescription="@string/image_button" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>